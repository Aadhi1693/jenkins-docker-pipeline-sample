pipeline {
    agent any

    stages {
        stage('Clone Repo') {
            steps {
                git 'https://github.com/your-username/jenkins-docker-pipeline-sample.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t jenkins-demo .'
            }
        }
        stage('Run Container') {
            steps {
                sh 'docker run -d -p 8080:80 --name jenkins-demo-container jenkins-demo || true'
            }
        }
    }
}


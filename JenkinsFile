pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building the project...'
                sh 'echo Building stage'
            }
        }

        stage('Test') {
            steps {
                echo 'Testing the project...'
                sh 'echo Testing stage'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the project...'
                sh 'echo Deployment stage'
            }
        }
    }
}


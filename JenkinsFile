pipeline {
    agent any

    stages {
        stage('Build') {
            steps {

                echo 'ğŸ”¨ Building Docker Image...'
                sh 'docker build -t sample-app .'
            }
        }

        stage('Test') {
            steps {
                echo 'ğŸ§ª Running Tests...'
                sh './test.sh'

                echo 'ğŸ—ï¸ Building the project...'
                
                // Example build command
                sh 'echo Build stage'
            }
        }
        
        stage('Test') {
           steps { 
		echo ' Testing the project..'
		// Example Test Stage
		sh 'echo test stage'
		
		}
	}
        stage('Deploy') {
            steps {
                echo 'ğŸš€ Deploying Container...'
                sh 'docker rm -f sample-app || true'
                sh 'docker run -d -p 8081:80 --name sample-app sample-app'
            }
        }
    }
}
